.main
    padding 50px 0
    background linear-gradient(to bottom, #1d4350, #2c3e50, #d9534f, #2c3e50, #1b1717)
    &__header
        color white
        line-height 40px
        margin-bottom 10px
        h3
            font-weight 300
        ^[1]--right
            text-align right
            padding-right 5px
            a:first-child
                text-decoration none
                text-transform uppercase
                font-size 13px
                margin-right 20px
            a
                color white
                padding 5px
                text-align right
                transition all 0.3s ease-in-out
            a:hover
                color #d9534f
            i
                font-size 13px
    &__citem
        margin-top 50px
        &-content
            ^[1]-item
                margin-bottom 20px
                cursor pointer
                max-width 190px
                height 250px
                margin 0 auto
                text-align center
                background #24242c
                color white
                border-radius 5px
                overflow hidden
                position relative
                transition all 0.3s ease-in-out
                &:hover .overlay
                    opacity 1
                .overlay
                    transition all 0.3s ease-in-out
                    position absolute
                    opacity 0
                    top 0
                    left 0
                    right 0
                    bottom 60px
                    line-height 170px
                    background linear-gradient(to top, #24242c, rgba(36, 36, 44, 0.9), rgba(29,67,80,.83), rgba(164,57,49,.66))
                    img
                        margin 0 auto
                        width 80px
                        height 80px
                img
                    margin-left -30px
                    max-height 75%
                    height auto
                &:hover
                    transform scale(1.05)
            ^[1]-des
                background #24242c
                padding 5px
                transition all 0.3s ease-in-out
                h2
                    font-size 16px
                    margin 0
                    padding 5px 0
    
    &__ritem
        margin-top 50px
        @media screen and (max-width: 768px)
            width 100%
        &-content
            padding 0 15px
            ^[1]-item
                height 100px
                color white
                padding 20px 0
                transition all 0.3s ease-in-out
                cursor pointer
                border-bottom 1px solid #D88E8E
                &:hover
                    transform scale(1.03)
                ^[1]-numberic
                    line-height 60px
                    font-size 20px
                ^[1]-thumb
                    overflow hidden
                    height 60px
                    img
                        padding 0
                        max-height 60px
                        height auto
                ^[1]-title
                    h2
                        font-size 20px
                ^[1]-icon
                    a
                        color white
                        padding 0 10px
                        line-height 60px
                        &:hover
                            color red
                ^[1]-showall
                    text-align center
                    text-transform uppercase
                    color white
                    padding 10px 0
                    cursor pointer
                    font-weight 700
                    transition all 0.3s ease-in-out
                    &:hover
                        color black